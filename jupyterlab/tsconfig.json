{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES5",
    "outDir": "./build",
    "lib": ["ES5", "ES2015.Collection", "ES2015.Promise", "DOM"],
    "types": ["node", "text-encoding"],
    "baseUrl": ".",
    "paths": {
      "@jupyterlab/*": ["../packages/*/src"]
    },
    "rootDirs": [
      "../packages"
    ]
  }
}
